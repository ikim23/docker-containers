  "version": "0.2.0",
  "configurations": [
    {
      "name": "Node",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "docker-compose",
      "runtimeArgs": [
        "up",
        "debug"
      ],
      "address": "localhost",
      "port": 9229,
      "restart": true,
      "localRoot": "${workspaceRoot}",
      "remoteRoot": "/usr/src/app/",
      "internalConsoleOptions": "neverOpen",
      "console": "integratedTerminal"
    }
  ]
}
